<form method="post" action="{{ path('fiche.delete', {'id': fiche.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette fiche ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ fiche.id) }}">
    <button class="btn btn-pinterest">Supprimer</button>
</form>
